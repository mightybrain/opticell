.features
  &__list
    display flex
    justify-content space-between

  &__item
    width 430px
    padding 16px 16px 15px
    text-align center
    border 1px solid $dust
    border-radius 24px

    &-image
      display block
      width 100%
      border-radius 16px

    &-heading
      margin 23px 0 0

    &-description
      margin 18px 0 0