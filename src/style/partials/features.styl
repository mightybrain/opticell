.features
  &__list
    display flex
    justify-content space-between

    @media $tablet
      justify-content center
      flex-wrap wrap
      gap 16px

    @media $mobile
      flex-direction column
      gap 24px

  &__item
    width 430px
    padding 16px 16px 15px
    text-align center
    border 1px solid $dust
    border-radius 24px

    @media $laptop
      width 282px
      padding 16px

    @media $tablet
      width calc(50% - 8px)
      padding 24px
      border-radius 16px

    @media $mobile
      width 100%
      padding 15px

    &-image
      display block
      width 100%
      border-radius 16px

      @media $tablet
        max-width 256px
        margin 0 auto
        border-radius 8px

    &-heading
      margin 23px 0 0

    &-description
      margin 18px 0 0

      @media $laptop
        margin 16px 0 0