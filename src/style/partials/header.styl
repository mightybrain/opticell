.header
  position absolute
  top 0
  left 0
  z-index 1
  width 100%
  padding 70px 0 0

  &__inner
    display flex
    align-items center
    justify-content space-between

  &__logo
    margin 0 0 0 160px

    &-image
      display block
      width 169px
      height 27px
      fill $white

  &__menu
    margin -2px 48px 0 0

    &-list
      display flex
      align-items center
      gap 64px

    &-item
      position relative
      display flex
      align-items center
      color $white
      transition color .5s 0s ease

      &-link
        font-size 19px
        line-height 24px
        font-weight 500
        color inherit
        text-transform uppercase

      &-arrow
        display block
        width 16px
        height 16px
        margin 0 0 0 8px
        fill $white
        transition fill .5s 0s ease

  &__submenu
    position absolute
    top calc(100% + 12px)
    left -24px
    width 194px
    padding 22px 24px 26px
    background-color $white
    border-radius 16px
    opacity 0
    visibility hidden
    transition opacity .5s 0s ease, visibility 0s .5s

    &::before
      content ''
      position absolute
      bottom 100%
      left 0
      display block
      width 100%
      height 12px

    &-list
      display flex
      flex-direction column
      gap 16px

    &-item
      &-link
        font-size 19px
        line-height 24px
        font-weight 500
        color $black
        transition color .5s 0s ease

        &:hover
          color $gold

.header__menu-item:hover
  color $gold

  & .header__menu-item-arrow
    fill $gold

  & .header__submenu
    opacity 1
    visibility visible
    transition opacity .5s 0s ease, visibility 0s 0s