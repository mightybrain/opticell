.header
  position absolute
  top 0
  left 0
  z-index 1
  width 100%
  padding 70px 0 0

  @media $laptop
    padding 71px 0 0

  @media $tablet
    padding 34px 0 0

  &__inner
    display flex
    align-items center
    justify-content space-between

  &__logo
    margin 0 0 0 9%

    @media $laptop
      margin 0 0 0 6%

    @media $tablet
      position relative
      z-index 1
      margin 0

    &-image
      display block
      width 164px
      height 27px
      fill $white
      transition fill .5s .5s ease

  &__menu
    margin -2px 4% 0 0

    @media $laptop
      margin -3px 5% 0 0

    @media $tablet
      position fixed
      top 0
      left 0
      width 100%
      height 0
      margin 0
      overflow hidden
      background-color $smoke
      transition height .5s .5s ease

    &-list
      display flex
      align-items center
      gap 64px

      @media $tablet
        flex-direction column
        gap 24px
        margin 119px 0
        text-align center

      @media $mobile
        align-items flex-start
        margin 103px 0
        padding 0 16px
        text-align left

    &-item
      position relative
      display flex
      align-items center
      color $white
      transition color .5s 0s ease

      @media $tablet
        flex-direction column
        color $black

      @media $mobile
        align-items flex-start
        width 100%

      &-link
        font-size 19px
        line-height 24px
        font-weight 500
        color inherit
        text-transform uppercase

        @media $laptop
          font-size 16px
          line-height 24px

      &-arrow
        display block
        width 16px
        height 16px
        margin 0 0 0 8px
        fill $white
        transition fill .5s 0s ease

        @media $tablet
          display none

  &__submenu
    position absolute
    top calc(100% + 12px)
    left -24px
    width 194px
    padding 22px 24px 26px
    background-color $white
    border-radius 16px
    opacity 0
    visibility hidden
    transition opacity .5s 0s ease, visibility 0s .5s

    @media $tablet
      position static
      width 100%
      margin-top 24px
      padding 0
      opacity 1
      visibility visible
      background none

    @media $mobile
      padding 0 0 0 16px

    &::before
      content ''
      position absolute
      bottom 100%
      left 0
      display block
      width 100%
      height 12px

    &-list
      display flex
      flex-direction column
      gap 16px

    &-item
      &-link
        font-size 19px
        line-height 24px
        font-weight 500
        color $black
        transition color .5s 0s ease

        @media $laptop
          font-size 16px
          line-height 24px

        &:hover
          color $gold

  &__burger
    display none

    @media $tablet
      position relative
      display block
      width 28px
      height 22px
      cursor pointer

    &::before,
    &::after
      content ""
      position absolute
      left 0
      transform rotate(0)
      display block
      width 100%
      height 2px
      border-radius 1px
      background-color $white
      transition top .5s .5s ease, transform .5s 0s ease, background-color .5s .5s ease

    &::before
      top 0

    &::after
      top 20px

    &-line
      position absolute
      top 10px
      left 0
      display block
      width 100%
      height 2px
      background-color $white
      border-radius 1px
      opacity 1
      transition opacity 0s .5s linear, background-color .5s .5s ease

.header__menu-item:hover
  color $gold

  & .header__menu-item-arrow
    fill $gold

  & .header__submenu
    opacity 1
    visibility visible
    transition opacity .5s 0s ease, visibility 0s 0s

body.burger-open
  @media $tablet
    overflow hidden

  & .header__logo-image
    fill $black
    transition fill .5s 0s ease

  & .header__menu
    @media $tablet
      height 100%
      opacity 1
      transition height .5s 0s ease

  & .header__burger
    &::before,
    &::after
      top 10px
      background-color $gray
      transition top .5s 0s ease, transform .5s .5s ease, background-color .5s .5s ease

    &::before
      transform rotate(45deg)

    &::after
      transform rotate(-45deg)

    &-line
      opacity 0
      background-color $gray