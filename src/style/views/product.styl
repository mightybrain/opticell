.product
  display flex
  flex-direction column
  gap 160px
  padding 0 0 160px

  @media $laptop
    gap 80px
    padding 0 0 80px

  @media $tablet
    gap 64px
    padding 0 0 64px

  &__about
    position relative
    padding 168px 0 80px
    background-color $black
    overflow hidden

    @media $tablet
      padding 111px 0 64px

    @media $mobile
      padding 111px 0 80px

    &::before
      content ''
      position absolute
      left 202px
      top 56px
      display block
      width 672px
      height 672px
      border-radius 50%
      opacity .3
      background var(--color-surface-invert, #FFF)
      filter blur(150px)

      @media $laptop
        left 173px
        top 40px
        width 432px
        height 432px
        filter blur(96px)

      @media $tablet
        top 133px
        left -76px
        width 328px
        height 328px
        filter blur(73px)

  &__intro
    position relative
    margin 0 0 40px
    padding 0 0 0 9%

    @media $laptop
      padding 0 6%

    @media $tablet
      margin 0 0 27px
      padding 0

  &__details
    position relative
    display flex
    justify-content space-between
    width 100%
    padding 0 0 0 9%

    @media $laptop
      padding 0 6%

    @media $tablet
      flex-direction column
      padding 0

  &__kinds
    display flex
    flex-direction column
    width 736px

    @media $laptop
      width 504px

    @media $tablet
      width 100%

  &__gallery
    display flex
    gap 64px

    @media $laptop
      gap 32px

    @media $tablet
      flex-direction column-reverse
      align-items center
      gap 42px

    @media $mobile
      gap 29px

    &-thumbs
      @media $mobile
        display flex
        width calc(100% + 32px)
        padding 0 0 0 16px
        overflow-x auto

      &::after
        content ""

        @media $mobile
          flex-shrink 0
          display block
          width 16px

      &-list
        display flex
        flex-direction column
        gap 8px

        @media $tablet
          flex-direction row

      &-item
        display flex
        justify-content center
        align-items center
        width 130px
        height 130px
        padding 7px
        border-radius 8px
        border 1px solid $gray
        transition border .5s 0s ease

        @media $laptop
          width 102px
          height 102px

        &:hover
          border 1px solid $gold

        &-image
          display block
          max-width 100%
          max-height 100%

    &-main
      &-image
        display block
        height 545px

        @media $laptop
          height 422px

        @media $tablet
          width 100%
          max-width 288px
          height auto

        @media $mobile
          max-width 224px

  &__assortment
    display flex
    align-items flex-end
    gap 32px
    margin 44px 0 0

    @media $laptop
      flex-direction column
      align-items flex-start

    @media $tablet
      gap 40px
      margin 39px 0 0
      padding 0 9%

    @media $mobile
      padding 0

  &__format
    display flex
    align-items flex-end
    gap 16px

    @media $laptop
      gap 62px

    @media $tablet
      flex-direction column
      align-items flex-start
      gap 9px
      width 100%

    &-heading
      font-size 28px
      line-height 28px
      font-weight 400
      color $feather

      @media $laptop
        font-size 20px
        line-height 20px

      @media $tablet
        font-size 18px
        line-height 18px

    &-list
      display flex
      gap 16px

      @media $tablet
        width 100%
        justify-content space-between

    &-item
      position relative
      bottom 0
      transition bottom 1s 0s ease

      &:hover
        bottom 15px

      &-image
        display block
        height 96px

  &__packages
    display flex
    align-items flex-end
    gap 16px

    @media $laptop
      gap 23px

    @media $tablet
      justify-content space-between
      align-items center
      width 100%

    &-heading
      font-size 28px
      line-height 28px
      font-weight 400
      color $feather

      @media $laptop
        font-size 20px
        line-height 20px

      @media $tablet
        font-size 18px
        line-height 18px

    &-select
      width 122px

  &__spec
    position relative
    width calc(50% - 80px)

    @media $laptop
      width calc(50% - 20px)
      margin 0 0 0 40px

    @media $tablet
      width 100%
      margin 40px 0 0

    @media $mobile
      margin 44px 0 0

  &__info
    display flex
    flex-direction column
    align-items flex-start
    gap 40px
    width 78%
    margin -4px 0 0

    @media $laptop
      width 100%

    @media $tablet
      padding 0 9%

    @media $mobile
      gap 38px
      padding 0

  &__heading
    font-size 48px
    line-height 46px
    font-weight 700
    color $white

    @media $laptop
      font-size 40px
      line-height 38px

    @media $tablet
      display none

  &__feature
    margin 0
    font-size 20px
    line-height 24px
    font-weight 500
    color $white
    text-transform uppercase

    @media $laptop
      font-size 18px

    @media $tablet
      font-size 16px

    & span:not([class])
      display block
      margin 16px 0 0
      font-size 14px
      line-height 21px
      font-weight 400
      text-transform none

      @media $tablet
        font-size 12px
        line-height 18px

  &__params
    width 100%

    &-heading
      @media $tablet
        font-size 24px
        line-height 24px

    &-list
      display flex
      flex-direction column
      gap 16px
      margin 26px 0 0

      @media $laptop
        margin 24px 0 0

    &-item
      position relative
      display flex
      align-items flex-end
      justify-content space-between
      font-size 18px
      line-height 27px
      font-weight 400
      color $white

      @media $laptop
        font-size 16px
        line-height 24px

      @media $tablet
        font-size 14px
        line-height 21px

      & span:not([class])
        position relative
        background-color $black

      & span:first-child
        padding 0 10px 0 0

      & span:last-child
        padding 0 0 0 10px
        text-align right

      &::before
        content ''
        position absolute
        left 0
        bottom 4px
        display block
        width 100%
        height 1px
        background-color $gray

  &__buy
    &-btn
      display flex
      align-items center
      justify-content center
      color $gold
      border 3px solid $gold
      cursor pointer

      @media $laptop
        padding 13px 29px 14px 21px

      @media $tablet
        order -1
        max-width 356px
        margin 0 auto

      &-icon
        order -1
        display block
        width 24px
        height 24px
        margin 0 10px 0 0
        fill $gold
        transition fill .5s 0s ease

    &-popover
      position absolute
      bottom 0
      left 0
      width 100%

  &__materials
    @media $tablet
      padding 24px 0 0

    @media $mobile
      padding 0

.product__buy-btn:hover
  color $white
  border 3px solid $white

  & .product__buy-btn-icon
    fill $white

.product
  & .inner-intro__heading
    display none

    @media $tablet
      display block
      font-weight 700